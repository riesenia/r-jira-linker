{
  "manifest_version": 3,
  "name": "JIRA Issue Linker",
  "version": "0.3.1",
  "description": "Automatically converts JIRA issue keys on web pages into interactive links with hover overlays. Configurable disabled domains and customizable settings.",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "JIRA Issue Linker"
  },
  "options_page": "settings.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
